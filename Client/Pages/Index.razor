@page "/"


<SfMaps>
    <MapsTitleSettings Text="Covid-19 Affected Countries"></MapsTitleSettings>
    <MapsZoomSettings Enable="true" MouseWheelZoom="true" EnablePanning="false">
        <MapsZoomToolbarSettings Orientation="Orientation.Vertical" VerticalAlignment="Alignment.Far"
                                 BorderColor="red" BorderWidth="3">
            <MapsZoomToolbarButton ToolbarItems="@ToolbarItemList" BorderColor="green" BorderWidth="5">
            </MapsZoomToolbarButton>
            <MapsZoomToolbarTooltipSettings FontColor="red" FontSize="15">
            </MapsZoomToolbarTooltipSettings>
        </MapsZoomToolbarSettings>
    </MapsZoomSettings>
    <MapsLayers>
        <MapsLayer ShapeData='new {dataOptions= "https://cdn.syncfusion.com/maps/map-data/world-map.json"}'
                   TValue="CountryData" ShapePropertyPath='new string[] {"name"}' ShapeDataPath="Name"
                   DataSource="@StatusDetails" AnimationDuration="500">
            <MapsShapeSettings ColorValuePath="SeverityLevel" Fill="#E5E5E5">
                <MapsDataLabelSettings Visible="true" LabelPath="Name"
                                       IntersectionAction="IntersectAction.Trim"></MapsDataLabelSettings>
                <MapsShapeColorMappings>
                    <MapsShapeColorMapping Color='new string[] {"#a69d70"}' Value="High"></MapsShapeColorMapping>
                    <MapsShapeColorMapping Color='new string[] {"#A4D6AD"}' Value="Moderate"></MapsShapeColorMapping>
                    <MapsShapeColorMapping Color='new string[] {"#DEEBAE"}' Value="Low"></MapsShapeColorMapping>
                </MapsShapeColorMappings>
            </MapsShapeSettings>
        </MapsLayer>
    </MapsLayers>
</SfMaps>


@code {

    public List<ToolbarItem> ToolbarItemList = new List<ToolbarItem> {

    ToolbarItem.Zoom, ToolbarItem.ZoomIn, ToolbarItem.ZoomOut, ToolbarItem.Reset

    };

    public class CountryData
    {
        public string Name { get; set; }
        public string SeverityLevel { get; set; }
    }

